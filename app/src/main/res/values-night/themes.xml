<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyMoney" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Màu chính tối -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Nền tổng thể -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Màu surface (khung, card, biểu đồ, thanh chọn, v.v.) -->
        <item name="colorSurface">@color/surface_dark</item>

        <!-- Text -->
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>

        <!-- Giữ icon màu gốc -->
        <item name="colorControlNormal">@null</item>
        <item name="android:tint">@null</item>
    </style>
    
    <!-- Full screen dialog style (night mode) -->
    <style name="FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorPrimary">@color/primary_green</item>
    </style>

</resources>
