<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">

            <!-- ================= PERIOD SELECTOR ================= -->
            <HorizontalScrollView
                android:id="@+id/period_selector_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/period_selector_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:id="@+id/period_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/period_today"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:background="@drawable/period_selector_bg"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/period_this_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/period_this_week"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/period_selector_bg"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/period_this_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/period_this_month"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/period_selector_bg_selected"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/period_this_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/period_this_year"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/period_selector_bg"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/period_custom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuỳ chọn"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/period_selector_bg"
                        android:textColor="@color/gray_text" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- ================= OVERVIEW ================= -->
            <LinearLayout
                android:id="@+id/overview_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="25dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/period_selector_container">

                <!-- ===== LEFT: BALANCE ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="140dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/search_background"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/balance_amount"
                        android:text="0 VND"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/expenses_amount"
                        android:text="-0 VND"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/red_expense"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/incomes_amount"
                        android:text="+0 VND"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_green"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- ===== RIGHT: SAVING GOALS ===== -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="140dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/search_background"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tv_no_saving_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Không có kế hoạch tiết kiệm"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_text"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"/>


                    <!-- GOAL 1 -->
                    <LinearLayout
                        android:id="@+id/layoutGoal1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <FrameLayout
                            android:id="@+id/layoutGoal1Circle"
                            android:layout_width="42dp"
                            android:layout_height="42dp">

                            <ProgressBar
                                android:id="@+id/progress_goal_1"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:indeterminateOnly="false"
                                android:progress="45"
                                android:progressDrawable="@drawable/circle_progress"/>

                            <TextView
                                android:id="@+id/tv_goal_percent_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="45%"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#FF4081"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_goal_name_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mục tiêu"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- GOAL 2 (ĐÃ CÓ ID) -->
                    <LinearLayout
                        android:id="@+id/layout_goal_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp">

                            <ProgressBar
                                android:id="@+id/progress_goal_2"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:indeterminateOnly="false"
                                android:progress="45"
                                android:progressDrawable="@drawable/circle_progress"/>

                            <TextView
                                android:id="@+id/tv_goal_percent_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="45%"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#FF4081"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_goal_name_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mục tiêu"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- TRANSACTIONS -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent_transactions_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/overview_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Floating Action Button for Import -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_pencil"
        android:contentDescription="@string/add_transaction"
        app:tint="@null"
        app:backgroundTint="#F5FFFFFF"
        app:elevation="8dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:rippleColor="@color/light_pink" />

</FrameLayout>
