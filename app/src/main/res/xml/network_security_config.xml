<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- For Android Emulator -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- For Physical Device - Your computer's local IP -->
        <domain includeSubdomains="true">192.168.1.9</domain>
        <domain includeSubdomains="true">192.168.1.12</domain>
        <domain includeSubdomains="true">10.24.6.73</domain>
        <!-- Allow entire local network range for convenience -->
        <domain includeSubdomains="true">192.168.1.*</domain>
        <domain includeSubdomains="true">172.20.10.2</domain>
    </domain-config>

    <!-- For production, only allow HTTPS -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>