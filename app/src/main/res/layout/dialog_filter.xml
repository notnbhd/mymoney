<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?android:attr/windowBackground">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_transactions"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="20dp" />

    <!-- Type Filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_type"
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/type_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radio_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filter_all"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filter_expense" />

        <RadioButton
            android:id="@+id/radio_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filter_income" />

    </RadioGroup>

    <!-- Category Filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_category"
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background"
        android:padding="8dp" />

    <!-- Date Filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_date"
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_from_date"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/from_date_text"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/date_input_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:hint="dd/MM/yyyy"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_to_date"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/to_date_text"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/date_input_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:hint="dd/MM/yyyy"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/reset_filter"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/apply_filter"
            android:textAllCaps="false"
            android:backgroundTint="@color/primary_green" />

    </LinearLayout>

</LinearLayout>
