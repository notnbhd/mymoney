<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_card">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Vượt giới hạn chi tiêu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E91E63"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiêu của bạn đã vượt giới hạn cho mục tiêu này.\n\nBạn có muốn chỉnh sửa lại toàn bộ giới hạn không?"
        android:textSize="14sp"
        android:textColor="#444444"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Để sau"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="20dp"/>

        <Button
            android:id="@+id/btnEditAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa toàn bộ"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</LinearLayout>
