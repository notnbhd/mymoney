<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2_copy">

    <!-- TITLE -->
    <TextView
        android:text="Nhắc nhập chi tiêu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <!-- TIME CARD -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_saving_goal_item"
        android:layout_marginBottom="24dp">

        <TextView
            android:text="Giờ nhắc"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTime"
            android:text="21:00"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/hard_pink"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnPickTime"
            android:text="Chọn giờ"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- SAVE BUTTON -->
    <Button
        android:id="@+id/btnSaveNotify"
        android:text="Bật nhắc nhở "
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"/>


</LinearLayout>
