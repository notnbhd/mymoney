<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog_pink">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin tiết kiệm"
        android:textColor="#FF4081"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Số tiền mục tiêu -->
    <EditText
        android:id="@+id/inputGoalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số tiền muốn tiết kiệm"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"/>

    <!-- Thời gian dự định -->
    <EditText
        android:id="@+id/inputMonths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Thời gian dự định (tháng)"
        android:inputType="number"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edittext"/>

    <!-- Lương hàng tháng -->
    <EditText
        android:id="@+id/inputSalary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lương hàng tháng"
        android:inputType="number"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edittext"/>

    <!-- Next -->
    <Button
        android:id="@+id/btnBasicNext"
        android:text="Tiếp tục"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF80AB"
        android:textColor="#FFFFFF"/>
</LinearLayout>
