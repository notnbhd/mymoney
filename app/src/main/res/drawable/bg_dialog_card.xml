<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền trắng -->
    <solid android:color="#FFFFFF"/>

    <!-- Bo góc -->
    <corners android:radius="20dp"/>

    <!-- Viền hồng nhạt -->
    <stroke
        android:width="1dp"
        android:color="#F8BBD0"/>

    <!-- Padding trong -->
    <padding
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp"/>
</shape>
