<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- KHUNG BO GÓC THẬT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập giới hạn chi tiêu"
            android:textColor="#E91E63"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- ITEM TEMPLATE -->
        <!-- Ăn uống -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/search_background"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ăn uống"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/limitFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập giới hạn"
                android:textColor="?attr/colorOnSurface"
                android:inputType="number"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/search_background"/>
        </LinearLayout>

        <!-- Nhà cửa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/rounded_option"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhà cửa"
                android:textColor="#E91E63"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/limitHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập giới hạn"
                android:inputType="number"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/rounded_edittext"/>
        </LinearLayout>

        <!-- Đi lại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/rounded_option"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đi lại"
                android:textColor="#E91E63"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/limitTransport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập giới hạn"
                android:inputType="number"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/rounded_edittext"/>
        </LinearLayout>

        <!-- Tình yêu / Quan hệ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/rounded_option"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình yêu / Quan hệ"
                android:textColor="#E91E63"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/limitRelationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập giới hạn"
                android:inputType="number"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/rounded_edittext"/>
        </LinearLayout>

        <!-- Giải trí -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/rounded_option"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giải trí"
                android:textColor="#E91E63"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/limitEntertainment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập giới hạn"
                android:inputType="number"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/rounded_edittext"/>
        </LinearLayout>

        <!-- BUTTON -->
        <Button
            android:id="@+id/btnStartSaving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_rounded_pink"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
